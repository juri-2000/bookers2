<style>
.error{
  color:red;
}
.field{
  margin:10px;
}
.actions{
  margin:10px;
}
</style>
<body>
<div class="container">
<div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ">
  <h2>Sign up</h2>
 　<span class="error"><%= render "devise/shared/error_messages" %></span>
　 <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
   <div class="field">
   Name<br>
   <%= f.text_field :name, autofocus: true %>
   </div>
   <div class="field">
   Email<br>
   <%= f.email_field :email, autofocus: true %>
   </div>
   <div class="field">
   Password<em>(<%= @minimum_password_length %> characters minimum)</em><br>
   <%= f.password_field :password, autocomplete: "new-password" %>
   </div>
   <div class="field">
   Password confirmation <br>
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
   <div class="actions">
   <%= f.submit "Sign up", class:"btn btn-sm btn-success" %>
   </div>
   <% end %>
   <%= render "devise/shared/links" %>
  </div>
 </div>
</div>
</body>