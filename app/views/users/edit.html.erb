<style>
h2{
    margin-top:15px;
}
</style>

<div class="container">
 <div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

　<h2>User Info</h2>
　　<%= form_with model:@user, local:true do |f| %>
  　<p><label for="inputName">Name</label></p>
  　<p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
  　<p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %></p>
  　<p><label for="inputImage">ProfileImage</label></p>
  　<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  　<div class="form-group">
    　<p><label for="user_introduction">Introduction</label></p>
    <%= f.text_area :introduction, class:"form-control introduction" %>
 　　</div>
 　　<div class="form-group">
     <%= f.submit "Update User", class:"btn btn-secondary" %>
 　　</div>
　　<% end %>
   </div>
  </div>
</div>